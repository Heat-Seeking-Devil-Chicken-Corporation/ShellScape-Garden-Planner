{
  "name": "shellscapegardenplanner",
  "version": "1.0.0",
  "description": "Plan the perfect garden whatever the size and location.",
  "private": true,
  "scripts": {
    "test": "jest --verbose --detectOpenHandles",
    "build": "NODE_ENV=production webpack",
    "build-dev": "webpack --watch",
    "start": "nodemon server/server.js",
    "dev": "concurrently \"cross-env NODE_ENV=development webpack-dev-server --hot --color\" \"nodemon ./server/server.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/PF-Armadillos/ShellScape-Garden-Planner.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PF-Armadillos/ShellScape-Garden-Planner/issues"
  },
  "jest": {
    "globalSetup": "./jest-setup.js",
    "globalTeardown": "./jest-teardown.js",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.js",
      "<rootDir>/tests/**/*.jsx"
    ],
    "verbose": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "homepage": "https://github.com/PF-Armadillos/ShellScape-Garden-Planner#readme",
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.3",
    "@testing-library/react": "^15.0.5",
    "babel-jest": "^29.7.0",
    "bcryptjs": "^2.4.3",
    "build": "^0.1.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jest-environment-jsdom": "^29.7.0",
    "mockingoose": "^2.16.2",
    "mongoose": "^8.3.2",
    "pg": "^8.11.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.1",
    "react-router-dom": "^6.23.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@eslint/js": "^9.1.1",
    "@shelf/jest-mongodb": "^4.2.0",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "globals": "^15.0.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-puppeteer": "^10.0.1",
    "mini-css-extract-plugin": "^2.9.0",
    "mockingoose": "^2.16.2",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "supertest": "^7.0.0",
